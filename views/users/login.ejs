<% layout("layouts/boilerplate") %>

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh;"> <div class="row justify-content-center align-items-center" style="min-height: 100vh;"> <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-4"> <div class="card shadow-lg border-0 rounded-4 overflow-hidden"> <div class="card-header py-4 text-center text-white" style="background: linear-gradient(90deg, #FF416C 0%, #FF4B2B 100%);"> <h2 class="my-0 fw-bold"><i class="fas fa-sign-in-alt me-2"></i>Login</h2> <p class="mb-0 mt-2">Welcome back! Please login to your account</p> </div> <div class="card-body p-4 p-md-5" style="background-color: #f8f9fa;"> <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="form-floating mb-4">
                        <input
                            name="username"
                            id="username"
                            type="text"
                            class="form-control rounded-4"
                            placeholder="Username"
                            required
                            style="border-left: 4px solid #FF416C;"
                        />
                        <label for="username" class="form-label text-muted ms-2"><i class="fas fa-user me-2"></i>Username</label>
                        <div class="invalid-feedback">
                            Please enter a valid Username.
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-4">
                        <input
                            name="password"
                            id="password"
                            type="password"
                            class="form-control rounded-4"
                            placeholder="Password"
                            required
                            style="border-left: 4px solid #667eea;"
                        />
                        <label for="password" class="form-label text-muted ms-2"><i class="fas fa-lock me-2"></i>Password</label>
                        <div class="invalid-feedback">
                            Please enter your password.
                        </div>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-muted" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <div class="d-grid mb-4">
                        <button class="btn btn-lg rounded-4 text-white fw-bold" style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                    
                    <div class="text-center mb-3">
                        <a href="#" class="text-decoration-none" style="color: #FF416C;">Forgot Password?</a>
                    </div>
                    
                    <div class="text-center">
                        <p class="mb-0 text-muted">Or login with</p>
                        <div class="d-flex justify-content-center mt-2">
                            <button type="button" class="btn btn-outline-primary btn-sm rounded-circle me-2">
                                <i class="fab fa-google"></i>
                            </button>
                            <button type="button" class="btn btn-outline-info btn-sm rounded-circle me-2">
                                <i class="fab fa-twitter"></i>
                            </button>
                            <button type="button" class="btn btn-outline-dark btn-sm rounded-circle">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3 text-white" style="background: linear-gradient(90deg, #FF416C 0%, #FF4B2B 100%);">
                <p class="mb-0">Don't have an account? <a href="#" class="text-white fw-bold text-decoration-underline">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

</div><style> .card { margin-top: 1rem; margin-bottom: 1rem; transition: transform 0.3s ease; } .card:hover { transform: translateY(-5px); } .form-control { border: none; background-color: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.1); } .form-control:focus { border-color: #667eea; box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25); } .btn { transition: all 0.3s; border: none; } .btn:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0,0,0,0.2); } .form-check-input:checked { background-color: #667eea; border-color: #667eea; } @media (max-width: 768px) { .card-body { padding: 1.5rem !important; } .card-header h2 { font-size: 1.5rem; } } @media (max-width: 576px) { .container-fluid { padding: 1rem; } .card { border-radius: 1rem; } .btn-lg { padding: 0.75rem; font-size: 1rem; } } </style>
><script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>