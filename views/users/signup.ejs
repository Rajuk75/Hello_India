<% layout("layouts/boilerplate") %>

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); min-height: 100vh;"> <div class="row justify-content-center align-items-center" style="min-height: 100vh;"> <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5"> <div class="card shadow-lg border-0 rounded-4 overflow-hidden"> <div class="card-header py-4 text-center text-white" style="background: linear-gradient(90deg, #FF512F 0%, #F09819 100%);"> <h2 class="my-0 fw-bold"><i class="fas fa-user-plus me-2"></i>Create Account</h2> <p class="mb-0 mt-2">Join our community and get started</p> </div> <div class="card-body p-4 p-md-5" style="background-color: #f8f9fa;"> <form action="/signUp" method="POST" class="needs-validation" novalidate>
                    <!-- Username Field -->
                    <div class="form-floating mb-4">
                        <input
                            name="username"
                            id="username"
                            type="text"
                            class="form-control rounded-4"
                            placeholder="Username"
                            required
                            style="border-left: 4px solid #FF512F;"
                        />
                        <label for="username" class="form-label text-muted ms-2"><i class="fas fa-user me-2"></i>Username</label>
                        <div class="invalid-feedback">
                            Please enter a valid Username.
                        </div>
                    </div>

                    <!-- Email Field -->
                    <div class="form-floating mb-4">
                        <input
                            name="email"
                            id="email"
                            type="email"
                            class="form-control rounded-4"
                            placeholder="Email"
                            required
                            style="border-left: 4px solid #6a11cb;"
                        />
                        <label for="email" class="form-label text-muted ms-2"><i class="fas fa-envelope me-2"></i>Email</label>
                        <div class="invalid-feedback">
                            Please enter a valid email.
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-4">
                        <input
                            name="password"
                            id="password"
                            type="password"
                            class="form-control rounded-4"
                            placeholder="Password"
                            required
                            style="border-left: 4px solid #2575fc;"
                        />
                        <label for="password" class="form-label text-muted ms-2"><i class="fas fa-lock me-2"></i>Password</label>
                        <div class="invalid-feedback">
                            Please enter a valid Password.
                        </div>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-floating mb-4">
                        <input
                            name="confirmPassword"
                            id="confirmPassword"
                            type="password"
                            class="form-control rounded-4"
                            placeholder="Confirm Password"
                            required
                            style="border-left: 4px solid #F09819;"
                        />
                        <label for="confirmPassword" class="form-label text-muted ms-2"><i class="fas fa-lock me-2"></i>Confirm Password</label>
                        <div class="invalid-feedback">
                            Please confirm your password.
                        </div>
                    </div>

                    <!-- Terms Agreement -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="termsAgreement" required>
                        <label class="form-check-label text-muted" for="termsAgreement">
                            I agree to the <a href="#" class="text-decoration-none" style="color: #6a11cb;">Terms & Conditions</a>
                        </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>

                    <div class="d-grid mb-4">
                        <button class="btn btn-lg rounded-4 text-white fw-bold" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="mb-0 text-muted">Already have an account? <a href="#" class="text-decoration-none fw-bold" style="color: #FF512F;">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</div><style> .card { margin-top: 1rem; margin-bottom: 1rem; transition: transform 0.3s ease; } .card:hover { transform: translateY(-5px); } .form-control { border: none; background-color: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.1); transition: all 0.3s; } .form-control:focus { border-color: #6a11cb; box-shadow: 0 0 0 0.25rem rgba(106, 17, 203, 0.25); } .btn { transition: all 0.3s; border: none; } .btn:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0,0,0,0.2); background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%); } .form-check-input:checked { background-color: #6a11cb; border-color: #6a11cb; } @media (max-width: 768px) { .card-body { padding: 1.5rem !important; } .card-header h2 { font-size: 1.5rem; } } @media (max-width: 576px) { .container-fluid { padding: 1rem; } .card { border-radius: 1rem; } .btn-lg { padding: 0.75rem; font-size: 1rem; } .form-floating { margin-bottom: 1rem; } } </style><!-- Font Awesome Icons --><script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
